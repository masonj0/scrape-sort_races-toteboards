<Window x:Class="CheckmateDeck.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:CheckmateDeck.ViewModels"
        mc:Ignorable="d"
         Title="Checkmate V8 - Command Deck" Height="800" Width="1200" Background="#1E1E1E">
    <Window.DataContext>
        <viewModels:MainViewModel/>
    </Window.DataContext>
    <TabControl>
        <TabItem Header="ðŸ”¥ Qualified Races">
            <ListView ItemsSource="{Binding QualifiedRaces}" Background="#2D2D30" HorizontalContentAlignment="Stretch">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="5" Padding="10" CornerRadius="5">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="{Binding DisplayTitle}" FontSize="18" FontWeight="Bold" Foreground="White"/>
                                    <TextBlock Text="{Binding PostTime, StringFormat='Post Time: HH:mm'}" Foreground="LightGray"/>
                                </StackPanel>
                                <TextBlock Grid.Column="1" Text="{Binding CheckmateScore, StringFormat={}{0:F1}}" FontSize="24" FontWeight="Bold" Foreground="{Binding ScoreColor}" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </TabItem>
        <TabItem Header="ðŸ“Š Data Sources">
            <DataGrid ItemsSource="{Binding AdapterStatuses}" AutoGenerateColumns="False" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Adapter" Binding="{Binding AdapterName}" Width="*"/>
                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="Auto"/>
                    <DataGridTextColumn Header="Last Run" Binding="{Binding LastRunFormatted}" Width="Auto"/>
                    <DataGridTextColumn Header="Races Found" Binding="{Binding RacesFound}" Width="Auto"/>
                </DataGrid.Columns>
            </DataGrid>
        </TabItem>
    </TabControl>
 
</Window>